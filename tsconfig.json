{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",  // <- Agregado para indicar la carpeta de salida
    "rootDir": "./src"   // <- Opcional, para asegurar que los archivos fuente estÃ¡n en "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
